<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/card">
        <shape>
            <padding
                android:bottom="6dp"
                android:left="1dp"
                android:right="4dp"
                android:top="1dp" />

            <solid android:color="#A9A9A9" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />

            <solid android:color="#FFFFFF" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>